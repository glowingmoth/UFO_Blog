<%= form_with(model: blog, local: true) do |form| %>
    <div class="form-group field">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control", value: "#{blog.title}" %>
    </div>
    <div class="form-group field">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", value: "#{blog.body}" %>    
    </div>
    <div class="form-group action">
        <%= form.submit "Submit", class: "btn btn-primary form-control" %>
    </div>
<% end %>
